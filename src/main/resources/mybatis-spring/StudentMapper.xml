<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qxcjs.mybatis.dao.StudentMapper">

    <select id="selectUserByID" resultType="com.qxcjs.mybatis.domain.Student" parameterType="java.lang.Integer">
      select * from student where id=#{id}
    </select>

    <select id="selectStudentPage" resultType="com.qxcjs.mybatis.domain.Student">
      select * from student
    </select>

    <update id="updateUser" parameterType="com.qxcjs.mybatis.domain.Student">
        update student
        <set>
            <if test="name != null">
                name= #{name},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>
</mapper>